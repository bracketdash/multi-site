{
    "name": "multisite-client-server",
    "version": "1.0.0",
    "description": "A multisite client server.",
    "author": "Michael Hatch",
    "license": "UNLICENSED",
    "main": "app.js",
    "scripts": {
        "freshmin": "rm -R public/css && rm -R public/js && node-sass scss/ -o public/css/ --output-style compressed && tsc && uglifyjs-folder public/js -e -x .js -o public/js",
        "prettier": "prettier --write \"{scss,ts}/**\"",
        "scss-build": "node-sass scss/ -o public/css/",
        "scss-watch": "node-sass -w scss/ -o public/css/",
        "start": "node app.js",
        "ts-build": "tsc",
        "ts-watch": "tsc -w"
    },
    "dependencies": {
        "express": "^4.17.1",
        "pug": "^2.0.4",
        "swagger-editor-dist": "^3.7.1"
    },
    "devDependencies": {
        "node-sass": "^4.13.0",
        "prettier": "^1.19.1",
        "typescript": "^3.7.3",
        "uglifyjs-folder": "^1.5.1"
    },
    "prettier": {
        "tabWidth": 4,
        "printWidth": 124
    }
}
